[log]
        date = iso
[push]
        default = simple
[pull]
        ff = only
[core]
        quotepath = false
#        excludesfile = ~/.gitignore
[alias]
        glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        st = status --short --branch

[mergetool "kdiff3NoAuto"]
        cmd = kdiff3 --L1 \"$MERGED (Base)\" --L2 \"$MERGED (Local)\" --L3 \"$MERGED (Remote)\" -o \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
